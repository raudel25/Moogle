@page "/{id}/{page:int}/{pos:int}"

<PageTitle>Moogle!</PageTitle>

<h1>ğŸ” Moogle!</h1>
<h3>@id</h3>

<ul>
    <p align="justify">
        @foreach (var (item, index) in Server.Read(id, page).Select((value, i) => (value, i)))
        {
            @if (index + page == pos)
            {
                <strong>@(item+" ")</strong>
            }
            else
            {
                @(item+" ")
            }
            @if(item=="")
            {
                <br><br>
            }
        }
    </p>
</ul>

<a target='__blank' href=@(id+"/"+(pos-pos%100)+"/"+pos)><button type="default"
        class="btn btn-primary">Resultado</button></a>

<input type="number" class="p-1 my-4" @bind="newpage" @bind:event="oninput">

<a target='__blank' href=@(id+"/"+(newpage*100)+"/"+pos)><button type="default" class="btn btn-primary">Ir</button></a>

<ul class="buttons">
    <a target='__blank' href=@(id+"/"+(page-100)+"/"+pos)><button type="default" class="btn btn-primary"
            margin-right="5px">Anterior</button></a>

    <a target='__blank' href=@(id+"/"+(page+100)+"/"+pos)><button type="default" class="btn btn-primary"
            margin-left="5px">Proximo</button></a>
</ul>

@code {
    [Parameter]
    public string id { get; set; }
    [Parameter]
    public int pos { get; set; }
    [Parameter]
    public int page { get; set; }
    private int newpage { get; set; }
}
